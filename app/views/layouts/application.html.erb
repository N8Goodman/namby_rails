<!DOCTYPE html>
<html>
<head>
  <title>Namby</title>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="notices">
    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <%= content_tag :div, msg, :class => "flash_#{name}" %>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="bar">
    <%= link_to 'Home', new_result_path if current_user %>
    <%= link_to 'Sign Up', new_registration_path unless current_user %>
    <%= link_to 'Sign In', new_session_path unless current_user %>
    <%= link_to 'Prior Searches', results_path if current_user %>
    <%= link_to 'Favorites', user_favorites_path(current_user) if current_user %>
    <%= button_to("Sign Out", session_path(current_user), method: :delete) if current_user %>
  </div>


<%= yield %>

</body>
</html>
